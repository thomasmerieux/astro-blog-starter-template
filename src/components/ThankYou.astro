---
import Menu from './Menu.astro';
import { useTranslations } from '../i18n/utils';
import type { BaseComponentProps } from '../types';

export interface Props extends BaseComponentProps {
  t?: any; // Make t optional
}

const { lang = 'en', t } = Astro.props;

// Ensure we have a valid translation function
const validT = t || useTranslations(lang);
---

<div class="min-h-screen flex flex-col">
  <!-- Skip link for screen readers -->
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:px-4 focus:py-2 focus:border focus:border-gray-300"
  >
    {validT('common.skipToContent')}
  </a>

  <!-- Menu - fixed at top -->
  <header class="flex-shrink-0">
    <Menu lang={lang} t={validT} />
  </header>

  <!-- Main content area -->
  <main id="main-content" class="flex-1 flex flex-col p-6 md:p-8">
    <!-- Page Title -->
    <div class="text-center mb-8 md:mb-12 lg:mb-20 flex-shrink-0">
      <h1
        class="text-gray-800 uppercase tracking-wider font-normal text-2xl sm:text-4xl"
        style="letter-spacing: 4px;"
      >
        {validT('thankYou.title')}
      </h1>
    </div>

    <!-- Page Content -->
    <div class="flex-1 flex justify-center">
      <div class="w-full max-w-4xl">
        <!-- Main Content with Left Border Design (matching Schedule page) -->
        <div class="border-l-2 pl-8 space-y-8" style="border-color: #428bb0;">
          <!-- Thank You Header -->
          <div class="space-y-6">
            <div class="mb-4">
              <div style="font-weight: 500; font-size: 16px; color: #428bb0;">
                {validT('thankYou.confirmed')}
              </div>
            </div>

            <p class="text-gray-600 font-normal leading-relaxed text-lg">
              {validT('thankYou.message')}
            </p>
          </div>

          <!-- Calendar Download Section -->
          <div class="space-y-4 pt-6 border-t border-gray-200">
            <h3 class="text-lg font-normal text-gray-900">
              {validT('thankYou.addToCalendar')}
            </h3>
            <p class="text-gray-600 text-sm">
              {validT('thankYou.calendarDescription')}
            </p>
            
            <div class="flex flex-wrap gap-3">
              <a
                href={`/api/calendar?lang=${lang}&event=full`}
                class="inline-flex items-center justify-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-normal border border-gray-300 transition-colors duration-200"
                download
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                {validT('thankYou.fullEvent')}
              </a>
              
              <a
                href={`/api/calendar?lang=${lang}&event=cocktail`}
                class="inline-flex items-center justify-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-normal border border-gray-300 transition-colors duration-200"
                download
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                {validT('schedule.events.arrival.title')}
              </a>
              
              <a
                href={`/api/calendar?lang=${lang}&event=dinner`}
                class="inline-flex items-center justify-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-normal border border-gray-300 transition-colors duration-200"
                download
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                {validT('schedule.events.dinner.title')}
              </a>
              
              <a
                href={`/api/calendar?lang=${lang}&event=dancing`}
                class="inline-flex items-center justify-center px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-800 text-sm font-normal border border-gray-300 transition-colors duration-200"
                download
              >
                <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"></path>
                </svg>
                {validT('schedule.events.dance.title')}
              </a>
            </div>
          </div>

          <!-- Navigation Actions -->
          <div class="flex flex-col sm:flex-row gap-4 pt-6">
            <a
              href={lang === 'en' ? '/' : `/${lang}/`}
              class="inline-flex items-center justify-center px-6 py-3 border-2 text-gray-900 font-normal uppercase tracking-wide text-sm hover:bg-gray-50 transition-colors duration-200"
              style="border-color: #428bb0;"
            >
              {validT('thankYou.backToHome')}
            </a>

            <a
              href={lang === 'en' ? '/schedule' : `/${lang}/schedule`}
              class="inline-flex items-center justify-center px-6 py-3 text-white font-normal uppercase tracking-wide text-sm hover:opacity-90 transition-opacity duration-200"
              style="background-color: #428bb0;"
            >
              {validT('thankYou.viewSchedule')}
            </a>
          </div>
        </div>
      </div>
    </div>
  </main>
</div>
