---
import Menu from './Menu.astro';
import { useTranslations } from '../i18n/utils';
import type { BaseComponentProps } from '../types';

export interface Props extends BaseComponentProps {
  t?: any; // Make t optional
}

const { lang = 'en', t } = Astro.props;

// Ensure we have a valid translation function
const validT = t || useTranslations(lang);
---

<div class="min-h-screen flex flex-col">
  <!-- Skip link for screen readers -->
  <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:px-4 focus:py-2 focus:border focus:border-gray-300">
    Skip to main content
  </a>
  
  <!-- Menu - fixed at top -->
  <header class="flex-shrink-0">
    <Menu lang={lang} t={validT} />
  </header>
  
  <!-- Main content area -->
  <main id="main-content" class="flex-1 flex flex-col p-6 md:p-8">
    <!-- Page Title -->
    <div class="text-center mb-8 md:mb-12 lg:mb-20 flex-shrink-0">
      <h1 class="text-gray-800 uppercase tracking-wider font-normal text-2xl sm:text-4xl" style="letter-spacing: 4px;">
        {validT("schedule.title")}
      </h1>
    </div>
    
    <!-- Page Content -->
    <div class="flex-1 flex justify-center">
  <div class="w-full max-w-4xl">
    
    <!-- Mobile Layout: Single left border with stacked content -->
    <div class="md:hidden border-l-2 pl-4 space-y-8" style="border-color: #428bb0;">
      <!-- Mobile Schedule Item 1 -->
      <div>
        <div class="mb-2">
          <div class="flex justify-between gap-2">
            <div style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.arrival.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.arrival.date")}</div>
          </div>
        </div>
        <div>
          <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.arrival.title")}</div>
          <div class="text-gray-600 font-normal">{validT("schedule.events.arrival.description")}</div>
        </div>
      </div>

      <!-- Mobile Schedule Item 2 -->
      <div>
        <div class="mb-2">
          <div class="flex justify-between gap-2">
            <div style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.dinner.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.dinner.date")}</div>
          </div>
        </div>
        <div>
          <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.dinner.title")}</div>
          <div class="text-gray-600 font-normal">{validT("schedule.events.dinner.description")}</div>
        </div>
      </div>

      <!-- Mobile Schedule Item 3 -->
      <div>
        <div class="mb-2">
          <div class="flex justify-between gap-2">
            <div style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.dance.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.dance.date")}</div>
          </div>
        </div>
        <div>
          <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.dance.title")}</div>
          <div class="text-gray-600 font-normal">{validT("schedule.events.dance.description")}</div>
        </div>
      </div>

      <!-- Mobile Schedule Item 4 -->
      <div>
        <div class="mb-2">
          <div class="flex justify-between gap-2">
            <div style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.brunch.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.brunch.date")}</div>
          </div>
        </div>
        <div>
          <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.brunch.title")}</div>
          <div class="text-gray-600 font-normal">{validT("schedule.events.brunch.description")}</div>
        </div>
      </div>
    </div>

    <!-- Desktop Layout: Row-by-row with continuous border effect -->
    <div class="hidden md:block relative">
      <!-- Continuous border line -->
      <div class="absolute left-1/3 top-0 bottom-0 border-l-2 ml-[-1px]" style="border-color: #428bb0;"></div>
      
      <div class="space-y-12">
        <!-- Schedule Item 1 -->
        <div class="flex items-start">
          <div class="w-1/3 text-right pr-8">
            <div class="mb-1" style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.arrival.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.arrival.date")}</div>
          </div>
          <div class="w-2/3 pl-8">
            <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.arrival.title")}</div>
            <div class="text-gray-600 font-normal">{validT("schedule.events.arrival.description")}</div>
          </div>
        </div>

        <!-- Schedule Item 2 -->
        <div class="flex items-start">
          <div class="w-1/3 text-right pr-8">
            <div class="mb-1" style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.dinner.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.dinner.date")}</div>
          </div>
          <div class="w-2/3 pl-8">
            <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.dinner.title")}</div>
            <div class="text-gray-600 font-normal">{validT("schedule.events.dinner.description")}</div>
          </div>
        </div>

        <!-- Schedule Item 3 -->
        <div class="flex items-start">
          <div class="w-1/3 text-right pr-8">
            <div class="mb-1" style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.dance.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.dance.date")}</div>
          </div>
          <div class="w-2/3 pl-8">
            <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.dance.title")}</div>
            <div class="text-gray-600 font-normal">{validT("schedule.events.dance.description")}</div>
          </div>
        </div>

        <!-- Schedule Item 4 -->
        <div class="flex items-start">
          <div class="w-1/3 text-right pr-8">
            <div class="mb-1" style="font-weight: 500; font-size: 16px; color: #428bb0;">{validT("schedule.events.brunch.fulldate")}</div>
            <div class="text-gray-900" style="font-weight: 400;">{validT("schedule.events.brunch.date")}</div>
          </div>
          <div class="w-2/3 pl-8">
            <div class="text-xl font-normal text-gray-900 mb-2">{validT("schedule.events.brunch.title")}</div>
            <div class="text-gray-600 font-normal">{validT("schedule.events.brunch.description")}</div>
          </div>
        </div>
      </div>
    </div>

  </div>
    </div>
  </div>
  </main>
</div>