---
import PageWrapper from './PageWrapper.astro';

const { lang = 'en', t } = Astro.props;
---

<PageWrapper title={t("qa.title")} lang={lang} t={t}>
  <div class="w-full max-w-4xl">
    
    <!-- Mobile Layout: Single continuous left border -->
    <div class="md:hidden border-l-2 pl-4 space-y-8" style="border-color: #428bb0;">
      <!-- Mobile Q&A Item 1 -->
      <div class="space-y-4">
        <h3 class="text-xl font-normal text-gray-900">{t("qa.questions.parking.question")}</h3>
        <p class="text-gray-600 font-normal leading-relaxed">{t("qa.questions.parking.answer")}</p>
      </div>

      <!-- Mobile Q&A Item 2 -->
      <div class="space-y-4">
        <h3 class="text-xl font-normal text-gray-900">{t("qa.questions.children.question")}</h3>
        <p class="text-gray-600 font-normal leading-relaxed">{t("qa.questions.children.answer")}</p>
      </div>

      <!-- Mobile Q&A Item 3 -->
      <div class="space-y-4">
        <h3 class="text-xl font-normal text-gray-900">{t("qa.questions.dresscode.question")}</h3>
        <p class="text-gray-600 font-normal leading-relaxed">{t("qa.questions.dresscode.answer")}</p>
      </div>
    </div>

    <!-- Desktop Layout: Individual borders -->
    <div class="hidden md:block space-y-12">
      <!-- Desktop Q&A Item 1 -->
      <div class="space-y-4">
        <h3 class="text-xl font-normal text-gray-900">{t("qa.questions.parking.question")}</h3>
        <div class="p-3 border-l-2 border-[#428bb0]">
          <p class="text-gray-600 font-normal leading-relaxed">{t("qa.questions.parking.answer")}</p>
        </div>
      </div>

      <!-- Desktop Q&A Item 2 -->
      <div class="space-y-4">
        <h3 class="text-xl font-normal text-gray-900">{t("qa.questions.children.question")}</h3>
        <div class="p-3 border-l-2 border-[#428bb0]">
          <p class="text-gray-600 font-normal leading-relaxed">{t("qa.questions.children.answer")}</p>
        </div>
      </div>

      <!-- Desktop Q&A Item 3 -->
      <div class="space-y-4">
        <h3 class="text-xl font-normal text-gray-900">{t("qa.questions.dresscode.question")}</h3>
        <div class="p-3 border-l-2 border-[#428bb0]">
          <p class="text-gray-600 font-normal leading-relaxed">{t("qa.questions.dresscode.answer")}</p>
        </div>
      </div>
    </div>

  </div>
</PageWrapper>