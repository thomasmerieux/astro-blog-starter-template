---
import Menu from './Menu.astro';
import { useTranslations } from '../i18n/utils';
import type { BaseComponentProps } from '../types';

export interface Props extends BaseComponentProps {
  t?: any; // Make t optional
}

const { lang = 'en', t } = Astro.props;

// Ensure we have a valid translation function
const validT = t || useTranslations(lang);
---

<div class="min-h-screen flex flex-col">
  <!-- Skip link for screen readers -->
  <a
    href="#main-content"
    class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:bg-white focus:px-4 focus:py-2 focus:border focus:border-gray-300"
  >
    {validT('common.skipToContent')}
  </a>

  <!-- Menu - fixed at top -->
  <header class="flex-shrink-0">
    <Menu lang={lang} t={validT} />
  </header>

  <!-- Main content area -->
  <main id="main-content" class="flex-1 flex flex-col p-6 md:p-8">
    <!-- Page Title -->
    <div class="text-center mb-8 md:mb-12 lg:mb-20 flex-shrink-0">
      <h1
        class="text-gray-800 uppercase tracking-wider font-normal text-2xl sm:text-4xl"
        style="letter-spacing: 4px;"
      >
        {validT('contact.title')}
      </h1>
    </div>

    <!-- Page Content -->
    <div class="flex-1 flex justify-center">
      <div class="w-full max-w-4xl">
        <!-- Header -->
        <div class="text-center mb-12">
          <p class="text-lg text-gray-600 max-w-2xl mx-auto font-normal leading-relaxed">
            {validT('contact.description')}
          </p>
        </div>

    <!-- Contact Information -->
    <div class="max-w-2xl mx-auto">
      <!-- Contact Details -->
      <div class="space-y-8">
        <div>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            <div class="contact-item-horizontal">
              <div class="contact-icon-horizontal">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div class="text-center">
                <p class="contact-label">{validT('contact.email')}</p>
                <a href="mailto:dana.thomas.wedding@gmail.com" class="contact-value contact-link">
                  dana.thomas.wedding@gmail.com
                </a>
              </div>
            </div>
            
            <div class="contact-item-horizontal">
              <div class="contact-icon-horizontal">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div class="text-center">
                <p class="contact-label">{validT('contact.location')}</p>
                <p class="contact-value">{validT('venue.location')}</p>
              </div>
            </div>
            
            <div class="contact-item-horizontal">
              <div class="contact-icon-horizontal">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a2 2 0 012-2h4a2 2 0 012 2v4m-6 9l2-2 4 4 6-6m-2-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2V9a2 2 0 00-2-2h-3"></path>
                </svg>
              </div>
              <div class="text-center">
                <p class="contact-label">{validT('contact.date')}</p>
                <p class="contact-value">{validT('home.date')}</p>
              </div>
            </div>
          </div>
        </div>

      </div>

    </div>
  </main>
</div>

<style>
  /* Contact item styling */
  .contact-item {
    @apply flex items-start space-x-4 pb-4 border-b border-gray-100;
  }

  .contact-icon {
    @apply flex-shrink-0 w-10 h-10 flex items-center justify-center rounded-full;
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    color: #428bb0;
  }

  .contact-label {
    @apply font-medium text-gray-900 mb-1 text-sm uppercase tracking-wide;
  }

  .contact-value {
    @apply text-gray-600 font-normal leading-relaxed;
  }

  .contact-link {
    @apply hover:text-[#428bb0] transition-colors duration-200;
  }

  /* Horizontal contact item styling */
  .contact-item-horizontal {
    @apply flex flex-col items-center space-y-3 p-4;
  }

  .contact-icon-horizontal {
    @apply flex-shrink-0 w-12 h-12 flex items-center justify-center rounded-full mx-auto;
    background-color: #f8fafc;
    border: 1px solid #e2e8f0;
    color: #428bb0;
  }


  /* Button styling */
  .btn-secondary {
    @apply block text-center border border-gray-300 px-8 py-2 hover:border-gray-400 transition-colors uppercase tracking-wide font-normal;
    background-color: transparent;
    color: #374151;
  }

  .btn-secondary:hover {
    background-color: #f9fafb;
    border-color: #428bb0;
    color: #428bb0;
  }


  /* Responsive adjustments */
  @media (max-width: 768px) {
    .contact-item {
      @apply space-x-3;
    }
    
    .contact-icon {
      @apply w-8 h-8;
    }
  }
</style>