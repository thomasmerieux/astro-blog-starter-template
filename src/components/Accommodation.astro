---
import PageWrapper from './PageWrapper.astro';

const { lang = 'en', t } = Astro.props;
---

<PageWrapper title={t("accommodation.title")} lang={lang} t={t}>
  <div class="w-full max-w-6xl">
    <!-- Desktop Layout -->
    <div class="hidden md:flex gap-4 h-[28rem]">
      <!-- Large Hotel Card (2/3 width) -->
      <div class="flex-2 relative overflow-hidden group cursor-pointer" style="flex: 2;" onclick="window.open('https://athinasuiteshotel.com/', '_blank')">
        <div class="flex h-full">
          <img 
            src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=800&h=600&fit=crop" 
            alt="Athina Suites Hotel" 
            class="w-1/2 h-full object-cover transition-opacity duration-300 group-hover:opacity-0"
          />
          <img 
            src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&h=600&fit=crop" 
            alt="Athina Suites Hotel Interior" 
            class="w-1/2 h-full object-cover transition-opacity duration-300 group-hover:opacity-0"
          />
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-6 bg-gradient-to-t from-black/70 to-transparent group-hover:opacity-0 transition-opacity duration-300">
          <h3 class="text-white text-2xl font-normal">Athina Suites Hotel</h3>
        </div>
        <!-- Hover overlay -->
        <div class="absolute inset-0 bg-black/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
          <div class="text-center text-white p-8">
            <h3 class="text-2xl font-normal mb-4">Athina Suites Hotel</h3>
            <p class="text-gray-300 mb-4 leading-relaxed">Luxury 5-star hotel in the heart of Bucharest, just minutes from the venue. Features elegant rooms, spa facilities, and exceptional service.</p>
          </div>
        </div>
      </div>

      <!-- Small Hotel Card (1/3 width) -->
      <div class="flex-1 relative overflow-hidden group cursor-pointer" onclick="window.open('https://www.marriott.com/en-us/hotels/buhsi-sheraton-bucharest-hotel/overview/', '_blank')">
        <img 
          src="https://images.unsplash.com/photo-1564501049412-61c2a3083791?w=600&h=600&fit=crop" 
          alt="Sheraton" 
          class="w-full h-full object-cover transition-opacity duration-300 group-hover:opacity-0"
        />
        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/70 to-transparent group-hover:opacity-0 transition-opacity duration-300">
          <h3 class="text-white text-xl font-normal">Sheraton</h3>
        </div>
        <!-- Hover overlay -->
        <div class="absolute inset-0 bg-black/90 opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-center justify-center">
          <div class="text-center text-white p-6">
            <h3 class="text-xl font-normal mb-3">Sheraton</h3>
            <p class="text-gray-300 mb-3 leading-relaxed text-sm">Charming boutique hotel with modern amenities and personalized service in Old Town.</p>
          </div>
        </div>
      </div>
    </div>

    <!-- Mobile Layout -->
    <div class="md:hidden space-y-4">
      <!-- Large Hotel Card -->
      <div class="relative overflow-hidden group cursor-pointer h-64" onclick="window.open('https://athinasuiteshotel.com/', '_blank')">
        <div class="flex h-full">
          <img 
            src="https://images.unsplash.com/photo-1551882547-ff40c63fe5fa?w=800&h=600&fit=crop" 
            alt="Athina Suites Hotel" 
            class="w-1/2 h-full object-cover transition-opacity duration-300 group-active:opacity-0"
          />
          <img 
            src="https://images.unsplash.com/photo-1566073771259-6a8506099945?w=800&h=600&fit=crop" 
            alt="Athina Suites Hotel Interior" 
            class="w-1/2 h-full object-cover transition-opacity duration-300 group-active:opacity-0"
          />
        </div>
        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/70 to-transparent group-active:opacity-0 transition-opacity duration-300">
          <h3 class="text-white text-xl font-normal">Athina Suites Hotel</h3>
        </div>
        <!-- Touch overlay -->
        <div class="absolute inset-0 bg-black/90 opacity-0 group-active:opacity-100 transition-opacity duration-300 flex items-center justify-center">
          <div class="text-center text-white p-6">
            <h3 class="text-xl font-normal mb-3">Athina Suites Hotel</h3>
            <p class="text-gray-300 mb-3 leading-relaxed text-sm">Luxury 5-star hotel in the heart of Bucharest, just minutes from the venue. Features elegant rooms, spa facilities, and exceptional service.</p>
          </div>
        </div>
      </div>

      <!-- Small Hotel Card -->
      <div class="relative overflow-hidden group cursor-pointer h-64" onclick="window.open('https://www.marriott.com/en-us/hotels/buhsi-sheraton-bucharest-hotel/overview/', '_blank')">
        <img 
          src="https://images.unsplash.com/photo-1564501049412-61c2a3083791?w=600&h=600&fit=crop" 
          alt="Sheraton" 
          class="w-full h-full object-cover transition-opacity duration-300 group-active:opacity-0"
        />
        <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/70 to-transparent group-active:opacity-0 transition-opacity duration-300">
          <h3 class="text-white text-xl font-normal">Sheraton</h3>
        </div>
        <!-- Touch overlay -->
        <div class="absolute inset-0 bg-black/90 opacity-0 group-active:opacity-100 transition-opacity duration-300 flex items-center justify-center">
          <div class="text-center text-white p-6">
            <h3 class="text-xl font-normal mb-3">Sheraton</h3>
            <p class="text-gray-300 mb-3 leading-relaxed text-sm">Charming boutique hotel with modern amenities and personalized service in Old Town.</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageWrapper>