    <!-- Image Container -->
    <div class="flex flex-col items-center justify-center max-w-full max-h-full p-4">
      <img
        id="lightbox-image"
        class="max-w-full max-h-[calc(100vh-8rem)] object-contain"
        alt="Photo"
