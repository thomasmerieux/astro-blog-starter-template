---
import PageWrapper from '../components/PageWrapper.astro';
import { useTranslations } from '../i18n/utils';

const lang = Astro.params.lang as string || 'en';
const t = useTranslations(lang);
---

<PageWrapper lang={lang} title="Page Not Found" t={t}>
  <div class="min-h-screen flex items-center justify-center bg-gray-50">
    <div class="max-w-md mx-auto text-center px-6">
      <div class="mb-8">
        <div class="text-6xl font-light text-gray-400 mb-4">404</div>
        <h1 class="text-2xl font-normal text-gray-900 mb-4">
          {t('error.pageNotFound')}
        </h1>
        <p class="text-gray-600 leading-relaxed mb-8">
          {t('error.pageNotFoundDescription')}
        </p>
      </div>

      <div class="space-y-4">
        <a 
          href={`/${lang}`}
          class="btn-primary inline-block text-decoration-none"
        >
          {t('common.backToHome')}
        </a>
        
        <div class="pt-6">
          <p class="text-sm text-gray-500 mb-4">
            {t('error.needHelp')}
          </p>
          
          <div class="flex justify-center space-x-6 text-sm">
            <a href={`/${lang}/venue`} class="text-[#428bb0] hover:underline">
              {t('nav.venue')}
            </a>
            <a href={`/${lang}/accommodation`} class="text-[#428bb0] hover:underline">
              {t('nav.accommodation')}
            </a>
            <a href={`/${lang}/rsvp`} class="text-[#428bb0] hover:underline">
              {t('nav.rsvp')}
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</PageWrapper>