---
import ThankYou from '../../components/ThankYou.astro';
import { useTranslations, type Languages } from '../../i18n/utils';

export function getStaticPaths() {
  return [
    { params: { lang: 'en' } },
    { params: { lang: 'fr' } },
    { params: { lang: 'ro' } },
  ];
}

const { lang } = Astro.params as { lang: Languages };
const t = useTranslations(lang);
---

<ThankYou lang={lang} t={t} />