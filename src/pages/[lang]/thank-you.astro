---
import BaseLayout from '../../layouts/BaseLayout.astro';
import ThankYou from '../../components/ThankYou.astro';
import { useTranslations, type Languages } from '../../i18n/utils';

const { lang } = Astro.params as { lang: Languages };
// Ensure lang is valid, fallback to 'en'
const validLang = lang && ['en', 'fr', 'ro'].includes(lang) ? (lang as Languages) : 'en';
const t = useTranslations(validLang);
const pageTitle = `${t('thankYou.title')} - DANA & THOMAS`;
---

<BaseLayout title={pageTitle} lang={validLang}>
  <ThankYou lang={validLang} t={t} />
</BaseLayout>
