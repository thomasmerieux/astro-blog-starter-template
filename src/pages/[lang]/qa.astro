---
import BaseLayout from '../../layouts/BaseLayout.astro';
import QA from '../../components/QA.astro';
import { useTranslations, type Languages } from '../../i18n/utils';
import { languages } from '../../i18n/ui';

export async function getStaticPaths() {
  return Object.keys(languages).map((lang) => ({
    params: { lang },
  }));
}

const { lang } = Astro.params as { lang: Languages };
const t = useTranslations(lang);

const pageTitle = `${t('qa.title')} - DANA & THOMAS`;
export const prerender = true;
---

<BaseLayout title={pageTitle} lang={lang}>
  <QA lang={lang} t={t} />
</BaseLayout>
