---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import type { Languages } from '../types';

export interface Props {
  title?: string;
  description?: string;
  lang?: Languages;
}

const {
  title = 'DANA & THOMAS',
  description = 'Wedding website for DANA & THOMAS - September 20th, 2025',
  lang = 'en',
} = Astro.props;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript
      ><link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600&display=swap"
      /></noscript
    >
  </head>
  <body>
    <slot />

    <!-- Language switching script -->
    <script src="/src/scripts/language-switcher.js"></script>
  </body>
</html>
