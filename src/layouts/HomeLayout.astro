---
import { ViewTransitions } from 'astro:transitions';
import '../styles/global.css';
import Menu from '../components/Menu.astro';
import { useTranslations } from '../i18n/utils';
import type { TranslationFunction, Languages } from '../types';

export interface Props {
  title?: string;
  description?: string;
  lang?: Languages;
  t?: TranslationFunction;
}

const {
  title = 'DANA & THOMAS',
  description = 'Wedding website for DANA & THOMAS - September 20th, 2025',
  lang = 'en',
  t,
} = Astro.props;

// Ensure we have a valid translation function
const validT = t || useTranslations(lang);
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />

    <style>
      .bg-svg {
        background-image: url('./../assets/background.svg');
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
      }
    </style>

    <!-- Preload critical fonts -->
    <link
      rel="preload"
      href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600&display=swap"
      as="style"
      onload="this.onload=null;this.rel='stylesheet'"
    />
    <noscript
      ><link
        rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Jost:wght@300;400;500;600&display=swap"
      /></noscript
    >
  </head>
  <body class="bg-svg">
    <div class="min-h-screen flex flex-col">
      <!-- Menu - fixed at top -->
      <header class="flex-shrink-0">
        <Menu lang={lang} t={validT} />
      </header>

      <!-- Home content - vertically centered with no title -->
      <main class="flex-1 flex items-center justify-center">
        <slot />
      </main>
    </div>

    <!-- Language switching script -->
    <script src="/src/scripts/language-switcher.js"></script>
  </body>
</html>
